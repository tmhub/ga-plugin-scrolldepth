<?xml version="1.0"?>
<config>
    <sections>
        <tm_googleanalytics>
            <label>Google Analytics</label>
            <tab>templates_master</tab>
            <frontend_type>text</frontend_type>
            <sort_order>700</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <scrolldepth translate="label comment" module="tm_gapluginscrolldepth">
                    <label>Scroll Depth plugin</label>
                    <comment><![CDATA[A Google Analytics plugin for measuring page scrolling. You can read more about this plugin at <a href='http://scrolldepth.parsnip.io/'>scrolldepth.parsnip.io</a>.]]></comment>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label">
                            <label>Enable plugin</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                    </fields>
                </scrolldepth>
            </groups>
        </tm_googleanalytics>
    </sections>
</config>
